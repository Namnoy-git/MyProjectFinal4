<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context=".view.main.ShowDataNoti"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Showtopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mitr"
            android:hint="หัวข้อการแจ้งเหตุ"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:background="@drawable/trans_white_rectangle"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/view" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="ประเภท"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showtype"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="ประเภทการแจ้งเหตุ"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="ระดับความรุนแรง"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showleval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="ระดับความรุนแรง"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="รายละเอียด"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="รายละเอียดการแจ้งเหตุ"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="สถานที่เกิดเหตุ"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showlacation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="เหตุเกิดที่ใด"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="สถานะการช่วยเหลือ"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showhelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="ยังไม่รับเรื่อง"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="รายละเอียดการช่วยเหลือ"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showdetailhelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr"
                android:layout_marginLeft="50dp"
                android:hint="แสดงรายละเอียดการช่วยเหลือ"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="ละติจูด"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showlatijud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr"
                android:layout_marginLeft="50dp"
                android:hint="แสดงรายละเอียดละติจูด"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="ลองติจูด"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showlongtijud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr"
                android:layout_marginLeft="50dp"
                android:hint="แสดงรายละเอียดลองติจูด"
                android:layout_marginBottom="50dp"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
