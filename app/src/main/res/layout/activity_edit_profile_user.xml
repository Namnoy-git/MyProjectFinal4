<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:background="@drawable/blue"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00B0FF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back_profile"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/backone"
                android:tint="#F8F2F2" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/mitr_semibold"
                android:layout_gravity="center"
                android:text="โปรไฟล์"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />


        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/trans_white_rectangle"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/ImViewProfileEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/original"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/TV_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="id"
            android:textSize="18dp"
            android:visibility="gone" />
        <EditText
            android:id="@+id/TV_EditName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_face"
            android:drawablePadding="10dp"
            android:fontFamily="@font/mitr"
            android:hint="ชื่อ-สกุล"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/TV_EditUsername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_personn"
            android:drawablePadding="10dp"
            android:fontFamily="@font/mitr"
            android:hint="ชื่อผู้ใช้งาน"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/TV_EditPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:fontFamily="@font/mitr"
            android:hint="รหัสผ่าน"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/TV_EditEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_personn"
            android:drawablePadding="10dp"
            android:fontFamily="@font/mitr"
            android:hint="อีเมล"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/TV_EditAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="10dp"
            android:fontFamily="@font/mitr"
            android:hint="ที่อยู่"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/TV_EditPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_local_phonee"
            android:drawablePadding="10dp"
            android:fontFamily="@font/mitr"
            android:hint="เบอร์โทรศัพท์"
            android:textSize="18dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
        <Button
            android:id="@+id/btnEditSaveProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/login_button"
            android:fontFamily="@font/mitr"
            android:text="บันทึก"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnEditConfirmProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edit_button"
            android:fontFamily="@font/mitr"
            android:text="ยกเลิก"
            android:textSize="18dp" />
</LinearLayout>
    </LinearLayout>

</ScrollView>
</LinearLayout>